public class Pattern{
    public static void zeroOneTriangle(int n){
        int sum;
        for(int i=1; i<=n; i++){
            for(int j=1; j<=i; j++){
                sum=i+j;
                if(sum%2==0){
                System.out.print(1+"");
                }
                else{
                    System.out.print(0+"");
                }
            }
            System.out.println();
        }
    }
    public static void main(String args[]){
        zeroOneTriangle(5);
    }
}
